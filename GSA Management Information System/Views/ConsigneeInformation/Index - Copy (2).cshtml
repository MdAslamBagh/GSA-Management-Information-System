@model IEnumerable<GSA_Management_Information_System.Models.ConsigneeInformation>

@{
    ViewBag.Title = "Index";

}
<style>
    th {
        background-color: #6495ED;
        line-height:1.5;
      
       
    }
</style>

<div class="container">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h4>&nbsp; Air Line Search Block</h4>
        </div>
        <div class="panel-body">
            <div>
                <div class="row">
                    <div class="col-md-8"></div>
                    <div class="col-md-4">
                        <input type="button" id="btnUpdate" class="btn btn-primary" value="Active or De-Active AirLine">
                    </div>
                </div>
                <div class="row">
                    <table id="assets-data-table" class="table table-bordered"
                           style="width:100%;"></table>
                </div>
            </div>
@*<div class="container">
    <div class="card" style="width: 90rem;">
        <div class="card-header bg-info" width="2000">Consignee List</div>*@
        <a class="btn btn-success" style="margin-bottom:10px" onclick="location.href='@Url.Action("Add", "ConsigneeInformation")'"><i class="fa fa-plus"></i>Add New</a>

        <table class="table table-bordered table-responsive table-hover" width="1150" id="example">
            <thead>
                <tr>

                    <th>Code</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Default</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>


        <link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" rel="stylesheet" />

        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
        @section scripts{
            <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
            <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
            <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
            <link rel="stylesheet" type="text/css" href="/DataTables/datatables.css">
            <script type="text/javascript" charset="utf8" src="/DataTables/datatables.js"></script>
            <script src="~/Scripts/notify.min.js"></script>
            <script>
            var Popup, dataTables;
            jQuery.noConflict()(function ($) {
                $(document).ready(function () {
                    dataTables = $("#example").DataTable({
                        "ajax": {
                            "url": "/ConsigneeInformation/GetData",
                            "type": "GET",
                            "datatype": "JSON"

                        },

                        "columns": [
                            { "data": "Consignee_Code" },
                            { "data": "Consignee_Name" },
                            { "data": "Consignee_Address" },
                            { "data": "Email" },
                            { "data": "Status" },
                            { "data": "Default_Code" },
                            {
                                "data": "ConsigneeId", "render": function (data) {
                                    return "<a class='btn btn-default btn-sm' onclick=location.href='@Url.Action("Edit","ConsigneeInformation")/" + data + "'><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger btn-sm'style='margin-left:5px'onclick=Delete(" + data + ")><i class='fa fa-trash'></i> Delete</a>"
                                },
                                "orderable": false,
                                "searchable": false,
                                "width": "150px"
                            }


                        ],


                        "language": {
                            "emptyTable": "No data found, please click on <b>Add New</b> Button"
                        }
                    });
                });
            });


                    function SubmitForm(form) {
                        $.ajax({
                            type: "post",
                            url: form.action,
                            data: $(form).serialize(),
                            success: function (data) {
                                if (data.success) {
                                    alert("I am alert box!");
                                    dataTables.ajax.reload();
                                    $.notify(data.message, {
                                        globalPosition: "top center",
                                        className: "success"


                                    })


                                    Popup.dialog('close');

                                }
                                }

                        });

                        return false;
                    }





                    function Delete(id) {

                        if (confirm('Are you sure you want to delete this Consignee record ?'))
                        {
                            $.ajax({
                                type: "post",
                                url: '@Url.Action("Delete","ConsigneeInformation")/' + id,
                                success: function (data) {

                                    if (data.success) {
                                        dataTables.ajax.reload();

                                        $.notify(data.message, {
                                            globalPosition: "top center",
                                            className: "success"

                                        })


                                    }
                                }
                            });
                        }
                    }

            </script>


        }

    </div>
</div>

