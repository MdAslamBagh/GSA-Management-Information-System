@section scripts{
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />
    <!-- Load jQuery JS -->
    <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
    <!-- Load jQuery UI Main JS  -->
    <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.min.js"></script>
    <script>


        //Branch Search
        jQuery.noConflict()(function ($) {

            $("#companyname").keyup(function () {
                var companyData = $("#companyname").val();
                if (companyData === '') {
                    $('#companycode').val('');

                }
                var jsonData = { companyname: companyData };
                $("#ReceivedIdErrorMessage").text("");
                $.ajax({
                    type: "POST",
                    url: "/CompanyInformation/GetCompanyCodeById",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(jsonData),
                    dataType: "json",
                    success: function (data) {
                        //  alert("Success ");
                        $("#companycode").val(data.Company_Code);

                    },
                });

                return false;
            });
            $("#companyname").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/CompanyInformation/Get_Company_Name",
                        type: "POST",
                        dataType: "json",
                        data: { Prefix: request.term },

                        success: function (data) {

                            response($.map(data, function (item) {

                                return {
                                    label: item.Company_Name,
                                    value: item.Company_Name,





                                };


                            }))

                        }
                    })
                },
                messages: {
                    noResults: "",
                    results: function (count) {
                        return count + (count > 1 ? ' results' : ' result ') + ' found';
                    }
                }
            });

            $("#branchname").keyup(function () {
                var branchData = $("#branchname").val();
                if (branchData === '') {
                    $('#branchcode').val('');

                }
                var jsonData = { branchname: branchData };
                $("#ReceivedIdErrorMessage").text("");
                $.ajax({
                    type: "POST",
                    url: "/CompanyInformation/GetBranchCodeById",
                    contentType: "application/json; charset=utf-8",
