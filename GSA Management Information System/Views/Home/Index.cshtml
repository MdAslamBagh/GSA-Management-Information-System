@section scripts{
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script>
        $(document).ready(function () {
            $("#search").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
</script>

<script>
    $('table').on('scroll', function () {
        $("table > *").width($("table").width() + $("table").scrollLeft());
    });
</script>
            <script>
                $("#search").show()
                $("#waitingissueTable").css("display", "inline");
                $("#waitingView").click(function () {
                    $("#searchdiv").show();
                    $("#waitingissueTable").css("display", "inline");
                    $("#alreadyissuedTable").css("display", "none");
                    $("#confirmedissuedTable").css("display", "none");
                });
                $("#alreadyIssued").click(function () {
                    $("#searchdiv").show();
                    $("#alreadyissuedTable").css("display", "inline");
                    $("#waitingissueTable").css("display", "none");
                    $("#confirmedissuedTable").css("display", "none");
                });

                $("#confirmedIssued").click(function () {
                    $("#searchdiv").show();
                    $("#confirmedissuedTable").css("display", "inline");
                    $("#waitingissueTable").css("display", "none");
                    $("#alreadyissuedTable").css("display", "none");

                });

            </script>


