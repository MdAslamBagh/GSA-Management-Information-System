@model GSA_Management_Information_System.Models.CustomerTypeInformation

@{
    ViewBag.Title = "Create";
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="~/Gsa_Management_System_layout/assets/css/style - Copy.css" rel="stylesheet" />
<link href="~/Gsa_Management_System_layout/assets/css/legendcss.css" rel="stylesheet" />

@using (Html.BeginForm("Create", "CustomerTypeInformation", FormMethod.Post, new { onSubmit = "return SubmitForm(this)" }))
            {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">
        <div class="container">
            <div class="card ">
                <div class="card-header bg-info" style="height: 4rem;">Customer Type Save</div>
                <div class="row">
                    <div class="form-group">
                        <div class="form-group col-md-10 col-sm-12 ">
                            <label for="accessname" class="col-md-3 col-sm-5">Code<font size="2px" color="red">*</font></label>
                            <div class="col-md-6 col-sm-7">
                                <div class="required">
                                    @Html.EditorFor(model => model.Type_Code, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                </div>
                                </div>
                        </div>

                    
                        <div class="form-group col-md-10 col-sm-12 ">
                            <label for="controllername" class="col-md-3 col-sm-5">Type<font size="2px" color="red">*</font></label>
                            <div class="col-md-6 col-sm-7">
                                <div class="required">
                                    @Html.EditorFor(model => model.Long_Desc, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Long_Desc, "", new { @class = "text-danger" })
                                </div>
                                </div>
                        </div>

                        <div class="form-group col-md-10 col-sm-12 ">
                            <label for="controllername" class="col-md-3 col-sm-5">Status</label>
                            <div class="col-md-6 col-sm-7">
                                @Html.DropDownListFor(Model => Model.Status, new SelectList(ViewBag.list), htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-10 col-sm-12 ">
                            <label for="controllername" class="col-md-3 col-sm-5">Default</label>
                            <div class="col-md-6 col-sm-7">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.Default_Code)
                                    @Html.ValidationMessageFor(model => model.Default_Code, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                        <div class="form-group col-md-10 col-sm-12 ">
                            <div class="col-md-10">
                                <div align="center">
                                    <a class="btn btn-primary" style="margin-left:10px" onclick="location.href='@Url.Action("Index", "CustomerTypeInformation")'"><i class="fa fa-plus"></i>Back To List</a>
                                    <input type="submit" value="submit" class="btn btn-info" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

@section scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
           $(function () {
               $(".datepicker").datepicker({
                   dateFormat: "mm/dd/yy",
                   changemonth: true,
                   changeyear: true,
                   minDate: new Date(2018, 0, 1),
                   maxDate: new Date(2020, 0, 1),
                   showOn: "both",
                   buttonImage: "http://jqueryui.com/resources/demos/datepicker/images/calendar.gif",
                   buttonText: "Calender"
               });
           });
    </script>
    @Scripts.Render("~/bundles/jqueryval")

}