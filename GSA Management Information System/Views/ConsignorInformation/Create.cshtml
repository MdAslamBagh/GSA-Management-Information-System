                                <div class="checkbox">
                                    @Html.EditorFor(model => model.Default_Code)
                                    @Html.ValidationMessageFor(model => model.Default_Code, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Entry_Date, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Entry_Date, new { htmlAttributes = new { @class = "datepicker" } })
                                @Html.ValidationMessageFor(model => model.Entry_Date, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div align="center">
                                    <input type="submit" value="Save" class="btn btn-info" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
