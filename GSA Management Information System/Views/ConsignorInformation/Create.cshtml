@model GSA_Management_Information_System.Models.ConsignorInformation

@{
    ViewBag.Title = "Create";
}


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Consignor Information</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Consignor_Code, htmlAttributes: new { @class = "control-label col-md-2" })
